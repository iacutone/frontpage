%h2 All Articles
.row-fluid
	.span12
		%table#showTable
			%thead
				%tr
					%th Date
					%th Publication
					%th Title
			%tbody
				- @articles.each do |article|
					%tr.times
						%td.span4= article.created_at.strftime("%d %b %Y")
						%td.span4= "New York Times"
						%td.span4= link_to truncate(article.nytimes_title, length: 75, separator: ' '), article.nytimes_link 
				

